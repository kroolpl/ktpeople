---
import { animate, stagger } from "@motionone/dom";
import Navigation from './Navigation.astro';
import { Image } from 'astro:assets';
import logo from '../assets/images/logo.svg';
---

<header class="fixed w-full bg-white/90 backdrop-blur-sm z-50 border-b border-gray-100" role="banner">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex-shrink-0">
        <a href="/" class="hover:scale-105 transition-transform duration-300 inline-flex items-center">
          <Image
            src={logo}
            alt="KT People Logo"
            class="h-10 w-auto"
            width={120}
            height={32}
          />
        </a>
      </div>
      <Navigation />
    </div>
  </div>
</header>